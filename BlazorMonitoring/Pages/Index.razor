@page "/"
@inject IConfiguration _config

<PageTitle>Index</PageTitle>

<h3>Appsettings</h3>
<br />
<h5>Dimension Four connection</h5>

<p>
    Api_url Value: @Api_url
</p>

<p>
    Header1Name: @Header1Name
</p>

<p>
    Header1Value: @Header1Value
</p>

<p>
    Header2Name: @Header2Name
</p>

<p>
    @*Header2Value: @Header2Value*@
    Header2Value: ******
</p>

<br />
<h5>Various</h5>
<p>
    PollRateMinutes: @PollRateMinutes
</p>

@code {
    string Api_url = "";
    string Header1Name = "";
    string Header1Value = "";
    string Header2Name = "";
    string Header2Value = "";

    string PollRateMinutes = "";

    protected override void OnInitialized()
    {
        Api_url = _config["DimensionFour:ApiUrl"];
        Header1Name = _config["DimensionFour:Header1Name"];
        Header1Value = _config["DimensionFour:Header1Value"];
        Header2Name = _config["DimensionFour:Header2Name"];
        Header2Value = _config["DimensionFour:Header2Value"];

        PollRateMinutes = _config["PollRateMinutes"];
    }
}
